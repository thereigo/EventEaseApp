@page "/events/{eventName}"
@using EventEaseApp.Data
@using EventEaseApp.Models
@code {
    [Parameter]
    public string EventName { get; set; }

    private EventModel eventDetails;

    protected override void OnInitialized()
    {
        eventDetails = MockData.Events.FirstOrDefault(e => e.Name == EventName);
    }
}

@if (eventDetails != null)
{
    <div class="event-details">
        <h3>@eventDetails.Name</h3>
        <p>@eventDetails.Date.ToString("MMMM dd, yyyy")</p>
        <p>@eventDetails.Location</p>
        <div class="event-details-links">
            <a href="/events">Back to List</a>
            <a href="/register/@eventDetails.Name">Register</a>
        </div>
    </div>
}
else
{
    <p>Event not found.</p>
}

<style>
    .event-details {
        background-color: #ffffff;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 16px;
        margin: 16px 0;
        transition: transform 0.2s;
        max-width: 30vw;
    }

    .event-details:hover {
        transform: translateY(-4px);
    }

    .event-details h3 {
        margin-top: 0;
        font-size: 1.5em;
        color: #333333;
    }

    .event-details p {
        margin: 8px 0;
        color: #666666;
    }

    .event-details-links {
        display: flex;
        justify-content: start;
        margin-top: 16px;
        gap: 1rem;
    }

    .event-details-links a {
        text-decoration: none;
        color: #ffffff;
        background-color: #007bff;
        padding: 8px 16px;
        border-radius: 4px;
        transition: background-color 0.2s;
    }

    .event-details-links a:hover {
        background-color: #0056b3;
    }
</style>